        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        ResizeMode="NoResize"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="478" Width="578.311">
    <Grid Margin="0,0,-6,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="327*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox HorizontalAlignment="Left" Height="425" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="572" BorderThickness="0" 
